    </div>

    <script>
        var counter = 0; 
        function addRow() {
            var div = document.createElement('div');
            var div2 = document.createElement('div');

            div.className = '';
            div2.className = '';

            div.innerHTML =
                `<input type="text" name="event_name" class="form-control" aria-describedby="emailHelp" placeholder="Event name" value=""><hr>`;

            div2.innerHTML =
                `<select class="custom-select" name="cal_action_type"  form="registerform"><option value="blink">blink</option></select><input form="registerform" type="color" name="calender_notification_color" value=""><br><hr>`;

            
            document.getElementById('content').appendChild(div);
            document.getElementById('content2').appendChild(div2);
            counter++;
        }

        function removeRow(input) {
            console.log(input);
            document.getElementById('content').removeChild(input.parentNode);
            document.getElementById('content2').removeChild(input.parentNode);
        }




        $(function () {
            var env_url = 'https://dd6da80a.ngrok.io';
            $("#registerform").on("submit", function (e) {
                var data = $(this).serialize();
                e.preventDefault();
                $.ajax({
                    url: env_url + '/settings',
                    type: 'POST',
                    data: data,
                    complete: function () {
                        //called when complete
                        console.log('process complete');
                    },
                    success: function (data) {
                        console.log(data);
                        var myJSON = JSON.stringify(data);
                        alert(myJSON);
                        console.log('process sucess');
                    },
                    error: function () {
                        console.log('process error');
                    },
                });
            });
        });
    </script>

